<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <div>
      <table border="1">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Author</th>
          <th>Created at</th>
          <th>Updated at</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>

        <% for(var i = 0; i < books.length; i++) { %>
        <tr>
          <td><%= books[i].id %></td>
          <td><%= books[i].title %></td>
          <td><%= books[i].author %></td>
          <td><%= books[i].created_at %></td>
          <td><%= books[i].updated_at %></td>

          <td><a href="<%= url + '/edit/' + books[i].id %>">Edit</a></td>
          <td><a href="<%= url + '/delete/' + books[i].id %>">Delete</a></td>
        </tr>
        <% } %>
      </table>
    </div>
    <div id="error"><%= message %></div>


  </body>
</html>
